<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="0">

        <record id="hms_prescription_order_portal_rule" model="ir.rule">
            <field name="name">Portal Patient's Own Prescription</field>
            <field name="model_id" ref="acs_hms.model_prescription_order"/>
            <field name="domain_force">[('patient_id.partner_id','=',user.commercial_partner_id.id)]</field>
            <field name="groups" eval="[(4, ref('base.group_portal'))]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_unlink" eval="False"/>
            <field name="perm_write" eval="False"/>
            <field name="perm_create" eval="False"/>
        </record>

        <record id="hms_hms_appointment_portal_rule" model="ir.rule">
            <field name="name">Portal Patient's Own Appointment</field>
            <field name="model_id" ref="acs_hms.model_hms_appointment"/>
            <field name="domain_force">[('patient_id.partner_id','=',user.commercial_partner_id.id)]</field>
            <field name="groups" eval="[(4, ref('base.group_portal'))]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_unlink" eval="False"/>
            <field name="perm_write" eval="False"/>
            <field name="perm_create" eval="False"/>
        </record>
       
    </data>
</odoo>

