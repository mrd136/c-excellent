<?xml version="1.0" encoding="utf-8"?>
<odoo>
     <data noupdate="1">

        <record id="group_acs_commission_user" model="res.groups">
            <field name="name">Manage Commissions</field>
            <field name="category_id" ref="acs_hms.module_category_hms"/>
            <field name="implied_ids" eval="[(4, ref('acs_hms.group_hms_user'))]"/>
            <field name="users" eval="[(4, ref('base.user_root')), (4, ref('base.user_admin'))]"/>
        </record>

        <record model="ir.rule" id="commission_company_user_rule">
            <field name="name">Commission multi-company</field>
            <field name="model_id" ref="acs_hms_commission.model_acs_hms_commission"/>
            <field name="global" eval="True"/>
            <field name="domain_force">['|',('company_id','=',False),('company_id', 'in', company_ids)]</field>
        </record>

        <record model="ir.rule" id="commission_sheet_company_user_rule">
            <field name="name">Commission Sheet multi-company</field>
            <field name="model_id" ref="acs_hms_commission.model_acs_commission_sheet"/>
            <field name="global" eval="True"/>
            <field name="domain_force">['|',('company_id','=',False),('company_id', 'in', company_ids)]</field>
        </record>

    </data>
</odoo>

