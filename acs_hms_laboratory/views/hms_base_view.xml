<?xml version="1.0"?>
<odoo>

    <!-- Patient -->
    <record id="hms_patient_view_lab_test" model="ir.ui.view">
        <field name="name">Patient Lab Test</field>
        <field name="model">hms.patient</field>
        <field name="inherit_id" ref="acs_hms.view_patient_form"/>
        <field name="arch" type="xml">
            <div name="button_box" position="inside">
                <button name="action_lab_requests" class="oe_stat_button" icon="fa-th-list" type="object" title="Lab Requests" groups="acs_hms.group_hms_receptionist,acs_hms_laboratory.group_hms_lab_user">
                    <field string="Lab Requests" name="request_count" widget="statinfo"/>
                </button>
                <button name="action_view_test_results" class="oe_stat_button" icon="fa-flask" type="object" title="Test Results" groups="acs_hms.group_hms_receptionist,acs_hms_laboratory.group_hms_lab_user,acs_hms.group_hms_nurse">
                    <field string="Test Results" name="test_count" widget="statinfo"/>
                </button>
            </div>
        </field>
    </record>

    <!-- Appointment -->
    <record id="view_hms_appointment_form" model="ir.ui.view">
        <field name="name">hms.appointment</field>
        <field name="model">hms.appointment</field>
        <field name="inherit_id" ref="acs_hms.view_hms_appointment_form"/>
        <field name="arch" type="xml">
            <button name="create_invoice" position="after">
                <button name="action_lab_request" string="Lab Request" type="object" states="in_consultation" icon="fa-flask" class="oe_highlight" groups="acs_hms.group_hms_jr_doctor"/>
            </button>
            <div name="button_box" position="inside">
                <button name="action_view_lab_request" class="oe_stat_button" icon="fa-flask" type="object" attrs="{'invisible': [('request_count','&lt;=',0)]}">
                    <field string="Lab Requests" name="request_count" widget="statinfo"/>
                </button>
                <button name="action_view_test_results" class="oe_stat_button" icon="fa-flask" type="object" attrs="{'invisible': [('test_count','&lt;=',0)]}">
                    <field string="Test Results" name="test_count" widget="statinfo"/>
                </button>
            </div>
        </field>
    </record>

    <!-- Treatment -->
    <record id="view_hospital_hms_treatment_form" model="ir.ui.view">
        <field name="name">hms.treatment Lab Test</field>
        <field name="model">hms.treatment</field>
        <field name="inherit_id" ref="acs_hms.view_hospital_hms_treatment_form"/>
        <field name="arch" type="xml">
            <button name="create_invoice" position="after">
                <button name="action_lab_request" string="Lab Request" type="object" states="running" icon="fa-flask" class="oe_highlight" groups="acs_hms.group_hms_jr_doctor"/>
            </button>
            <div name="button_box" position="inside">
                <button name="action_lab_requests" class="oe_stat_button" icon="fa-th-list" type="object">
                    <field string="Lab Requests" name="request_count" widget="statinfo"/>
                </button>
                <button name="action_view_test_results" class="oe_stat_button" icon="fa-flask" type="object">
                    <field string="Test Results" name="test_count" widget="statinfo"/>
                </button>
            </div>
        </field>
    </record>

    <!-- Hospitalization -->
    <record id="view_acs_hospitalization_form" model="ir.ui.view">
        <field name="name">acs.hospitalization</field>
        <field name="model">acs.hospitalization</field>
        <field name="inherit_id" ref="acs_hms_hospitalization.view_acs_hospitalization_form"/>
        <field name="arch" type="xml">
            <button name="button_indoor_medication" position="after">
                <button name="action_lab_request" string="Lab Request" type="object" states="hosp" icon="fa-flask" class="oe_highlight" groups="acs_hms.group_hms_jr_doctor"/>
            </button>
            <div name="button_box" position="inside">
                <button name="action_lab_requests" class="oe_stat_button" icon="fa-th-list" type="object" attrs="{'invisible': [('state', 'not in', ['hosp','discharged','done'])]}" groups="acs_hms_laboratory.group_hms_lab_user,acs_hms.group_hms_nurse">
                    <field string="Lab Requests" name="request_count" widget="statinfo"/>
                </button>
                <button name="action_view_test_results" class="oe_stat_button" icon="fa-flask" type="object" attrs="{'invisible': [('state', 'not in', ['hosp','discharged','done'])]}" groups="acs_hms_laboratory.group_hms_lab_user,acs_hms.group_hms_nurse">
                    <field string="Test Results" name="test_count" widget="statinfo"/>
                </button>
            </div>
        </field>
    </record>

    <record id="view_physician_form" model="ir.ui.view">
        <field name="name">hms.physician.form</field>
        <field name="model">hms.physician</field>
        <field name="inherit_id" ref='acs_hms.view_physician_form'/>
        <field name="arch" type="xml">
            <div name="button_box" position="inside">
                <button name="action_lab_request" groups="acs_hms.group_hms_jr_doctor" type="object" class="oe_stat_button" icon="fa-th-list">
                    <field string="Lab Request" name="lab_request_count" widget="statinfo"/>
                </button>

                <button name="action_lab_result" groups="acs_hms.group_hms_jr_doctor" type="object" class="oe_stat_button" icon="fa-flask">
                    <field string="Lab Result" name="lab_result_count" widget="statinfo"/>
                </button>
            </div>
        </field>
    </record>

</odoo>