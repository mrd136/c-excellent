<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Inherit Form View to Modify add percent field in product template -->
    <record id="product_template_percentage" model="ir.ui.view">
        <field name="name">product.template.percentage.form</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_only_form_view"/>
        <field name="arch" type="xml">

            <xpath expr="//div[@name='standard_price_uom']" position="after">
                    <div colspan="2">
                        <label for="is_percent" string="Percent"/>
                        <field name="is_percent"/>
                        <label for="value_amount" string=""/>
                        <label for="value_amount" string=""/>
                        <label for="value_amount" string=""/>
                        <label for="value_amount" string=""/>
                        <label for="value_amount" string=""/>
                        <label for="value_amount" string=""/>
                        <label for="value_amount" string=""/>
                        <label for="value_amount" string=""/>
                        <label for="value_amount" string=""/>
                        <label for="value_amount" string=""/>
                        <label for="value_amount" string=""/>
                        <label for="value_amount" string=""/>
                        <label for="value_amount" string=""/>
                        <label for="value_amount" string=""/>
                        <label for="value_amount" string=""/>
                        <span attrs="{'invisible': [('is_percent','=', False)]}"><field name="value_amount" placeholder="Value" class="oe_inline"/>%</span>
                    </div>
            </xpath>
        </field>
    </record>
</odoo>
