<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <!-- service -->
    <record id="view_hms_referral_service_tree" model="ir.ui.view">
        <field name="name">hms.referral.service.tree</field>
        <field name="model">hms.referral.service</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="code"/>
            </tree>
        </field>
    </record>
    <record id="view_hms_referral_service_form" model="ir.ui.view">
        <field name="name">hms.referral.service.form</field>
        <field name="model">hms.referral.service</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="code"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
    <record id="action_referral_service" model="ir.actions.act_window">
        <field name="name">Service</field>
        <field name="res_model">hms.referral.service</field>
        <field name="view_mode">tree,form</field>
    </record>
    <menuitem id="menu_referral_config" name="Configuration" sequence="3" parent="ce_referral_hms.menu_referral_parent"/>
    <menuitem id="menu_referral_service" name="Service" sequence="1" parent="menu_referral_config" action="action_referral_service"/>
</odoo>