<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <!-- service -->
    <record id="view_hms_referral_service_tree" model="ir.ui.view">
        <field name="name">hms.referral.service.tree</field>
        <field name="model">hms.referral.service</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="code"/>
                <field name="is_obstetrics"/>
                <field name="unit_ids" widget="many2many_tags"/>
            </tree>
        </field>
    </record>
    <record id="view_hms_referral_service_form" model="ir.ui.view">
        <field name="name">hms.referral.service.form</field>
        <field name="model">hms.referral.service</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="code"/>
                        <field name="is_emergency"/>
                        <field name="is_obstetrics"/>
                        <field name="unit_ids" widget="many2many_tags"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
    <record id="action_referral_service" model="ir.actions.act_window">
        <field name="name">Service</field>
        <field name="res_model">hms.referral.service</field>
        <field name="view_mode">tree,form</field>
    </record>
    <menuitem id="menu_referral_config" name="Configuration" sequence="3" parent="ce_referral_hms.menu_referral_parent"/>
    <menuitem id="menu_referral_service" name="Service" sequence="1" parent="menu_referral_config" action="action_referral_service"/>

    <record id="action_hospital_health_unit_tree" model="ir.actions.act_window">
        <field name="name">Hospital/Health center</field>
        <field name="res_model">operating.unit</field>
        <field name="view_mode">tree,form</field>
        <!--        <field name="domain">[('type', '=', 'hospital')]</field>-->
        <!--        <field name="context">{'default_type': 'hospital'}</field>-->
        <field name="help" type="html">
            <p class="oe_view_nocontent_create">
                Click to start a new Hospital/Health center.
            </p>
        </field>
    </record>
    <menuitem
            action="action_hospital_health_unit_tree"
            id="menu_action_hospital_unit_tree"
            parent="menu_referral_config"
            sequence="2"
            groups="operating_unit.group_multi_operating_unit"
    />
</odoo>