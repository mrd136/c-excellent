<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_location_form_inherit" model="ir.ui.view">
        <field name="name">stock.location.form.inherit</field>
        <field name="model">stock.location</field>
        <field name="inherit_id" ref="stock.view_location_form"/>
        <field name="arch" type="xml">
            <field name="usage" position="before">
                <field name="code" required="True"/>
            </field>
            <field name="company_id" position="after">
                <field name="owner_ids" widget="many2many_tags"/>
                <field name="account_id"/>
                <field name="customer_valuation_account_id"/>
<!--                <field name="vendor_valuation_account_id"/>-->
                <field name="is_transfer_location"/>
            </field>
        </field>
    </record>

    <record model="ir.ui.view" id="view_picking_form_account">
      <field name="name">stock.picking.form.account</field>
      <field name="model">stock.picking</field>
      <field name="inherit_id" ref="stock.view_picking_form"/>
      <field name="arch" type="xml">
        <xpath expr="//button[@name='action_picking_move_tree']" position="before">
          <button name="action_account_move" class="oe_stat_button" icon="fa-arrows-v" type="object" help="List view of operations" states="done">
              <div class="o_form_field o_stat_info">
                  <span class="o_stat_text">Account Move</span>
              </div>
          </button>
          <button name="action_view_return" class="oe_stat_button" icon="fa-long-arrow-down" type="object" help="List view of operations" attrs="{'invisible':[('is_return','=',False)]}">
              <div class="o_form_field o_stat_info" >
                  <span class="o_stat_text">Return</span>
                  <field name="is_return" invisible="1"/>
              </div>
          </button>
        </xpath>
      </field>
    </record>

    <record model="ir.ui.view" id="view_department_form_inherit2">
      <field name="name">hr.department.form.account</field>
      <field name="model">hr.department</field>
      <field name="inherit_id" ref="hr.view_department_form"/>
      <field name="arch" type="xml">
        <field name="company_id" position="after">
          <field name="analytic_account_id"/>
        </field>
      </field>
    </record>


</odoo>