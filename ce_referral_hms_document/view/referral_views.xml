<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- Referral view -->
    <record id="view_document_referral_form" model="ir.ui.view">
        <field name="name">hms.referral.document</field>
        <field name="model">hms.referral</field>
        <field name="inherit_id" ref="ce_referral_hms.view_hms_referral_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@name='button_box']" position="inside">
                <button class="oe_stat_button" type="object"
                        name="action_view_attachments" icon="fa-files-o">
                    <field string="Documents" name="attach_count" widget="statinfo"/>
                </button>
            </xpath>
        </field>
    </record>
</odoo>