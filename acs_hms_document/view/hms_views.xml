<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- Patient view -->
    <record id="view_patient_form" model="ir.ui.view">
        <field name="name">hms.patient.document</field>
        <field name="model">hms.patient</field>
        <field name="inherit_id" ref="acs_hms.view_patient_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@name='button_box']" position="inside">
                <button class="oe_stat_button" type="object"
                    name="action_view_attachments" icon="fa-files-o">
                    <field string="Documents" name="attach_count" widget="statinfo"/>
                </button>
            </xpath>
        </field>
    </record>

    <!-- Appointment view -->
    <record id="view_hms_appointment_form" model="ir.ui.view">
        <field name="name">hms.appointment.document</field>
        <field name="model">hms.appointment</field>
        <field name="inherit_id" ref="acs_hms.view_hms_appointment_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@name='button_box']" position="inside">
                <button class="oe_stat_button" type="object" name="action_view_attachments" icon="fa-files-o" attrs="{'invisible': [('state','=','done'),('attach_count', '=', 0)]}">
                    <field string="Documents" name="attach_count" widget="statinfo"/>
                </button>
            </xpath>
        </field>
    </record>

    <!-- Treatment view -->
    <record id="view_hospital_hms_treatment_form" model="ir.ui.view">
        <field name="name">hms.treatment.form</field>
        <field name="model">hms.treatment</field>
        <field name="inherit_id" ref="acs_hms.view_hospital_hms_treatment_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@name='button_box']" position="inside">
                <button class="oe_stat_button" type="object" name="action_view_attachments" icon="fa-files-o" attrs="{'invisible':[('attach_count', '=', 0)]}">
                    <field string="Documents" name="attach_count" widget="statinfo"/>
                </button>
            </xpath>
        </field>
    </record>

</odoo>