<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <data>

        <!--
            Refuse Wizard
        -->
        <record id="view_form_refusal_wizard" model="ir.ui.view">
            <field name="name">refusal.wizard,form</field>
            <field name="model">refusal.wizard</field>
            <field name="arch" type="xml">
                  <form string="سبب الرفض">
                    <separator string="سبب الرفض"/>
                    <group>
                        <field name="message" required="1"/>
                    </group>
                    <footer>
                        <button name="button_refuse"
                                string="حفظ"
                                type="object"
                                icon="fa-floppy-o"
                                class="oe_highlight"/>
                        أو
                        <button string="إلغاء"
                                class="oe_link"
                                special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>
         
   <record id="action_form_refusal_wizard" model="ir.actions.act_window">
            <field name="name">سبب الرفض</field>
            <field name="res_model">refusal.wizard</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
        </record>
        

    </data>
</odoo>