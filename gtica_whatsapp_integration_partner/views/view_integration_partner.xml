<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_patient_form_extend" model="ir.ui.view"> 
            <field name="name">res.patient.form.extend</field>
            <field name="model">hms.patient</field>
            <field name="inherit_id" ref="acs_hms.view_patient_form"/>
            <field name="arch" type="xml">
                <div name="button_box" position="inside">

                    <button
                         name="send_whatsapp_step"
                         string="Send Whatsapp"
                         type="object"
                         class="oe_stat_button"
                         title="Send Whatsapp"
                         icon="fa-whatsapp"
                    />

                </div>
                <xpath expr="//field[@name='mobile']" position="after">
                    <button
                         name="send_whatsapp_step"
                         type="object"
                         class="btn btn-sm btn-link mb4 fa fa-whatsapp"
                         title="Send Whatsapp"
                         style="margin-right:0px;padding-right: 0px;"
                    />
                </xpath>
                <xpath expr="//field[@name='mobile']" position="after">
                    <button
                         name="send_whatsapp_step"
                         string="Send Whatsapp"
                         type="object"
                         class="btn btn-sm btn-link mb4 fa fa-whatsapp"
                         title="Send Whatsapp"
                    />
                </xpath> 
            </field>
        </record>
</odoo>