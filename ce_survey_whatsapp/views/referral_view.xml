<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_referral_form_extend_whatsapp" model="ir.ui.view">
        <field name="name">res.referral.whatsapp.form.extend</field>
        <field name="model">hms.referral</field>
        <field name="inherit_id" ref="ce_referral_hms.view_hms_referral_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@name='button_box']" position="inside">
                <button
                        name="send_whatsapp_step"
                        string="Send Whatsapp"
                        type="object"
                        class="oe_inline oe_stat_button"
                        title="Send Whatsapp"
                        icon="fa-whatsapp"
                />
            </xpath>
        </field>
    </record>
</odoo>