<?xml version="1.0" encoding="utf-8"?>
<odoo>
        <record model="ir.ui.view" id="view_transfer_request_report_pivot">
            <field name="name">transfer.request.report.pivot</field>
            <field name="model">transfer.request.report</field>
            <field name="arch" type="xml">
                <pivot string="Asset Analysis" disable_linking="True" display_quantity="true">
                    <field name="date" type="col"/>
                    <field name="request_id" type="row"/>
                    <field name="location_from_id" type="col"/>
                    <field name="location_to_id" type="col"/>
                    <field name="product_id" type="col"/>
                    <field name="product_uom" type="col"/>
                    <field name="product_qty" type="measure"/>
                    <field name="deliver_qty" type="measure"/>
                    <field name="receipt_qty" type="measure"/>
                    <field name="onhand_src_qty" type="measure"/>
                    <field name="onhand_dest_qty" type="measure"/>
                </pivot>
            </field>
        </record>
        <record model="ir.ui.view" id="view_transfer_request_report_graph">
            <field name="name">transfer.request.report.graph</field>
            <field name="model">transfer.request.report</field>
            <field name="arch" type="xml">
                <graph string="Transfer Request Statistics" type="line">
                    <field name="date" interval="day" type="col"/>
                    <field name="product_id" type="measure"/>
                    <field name="product_qty" type="measure"/>
                    <field name="deliver_qty" type="measure"/>
                    <field name="receipt_qty" type="measure"/>
                    <field name="onhand_src_qty" type="measure"/>
                    <field name="onhand_dest_qty" type="measure"/>
                </graph>
            </field>
        </record>

        <record id="view_transfer_request_report_search" model="ir.ui.view">
        <field name="name">transfer.request.report.search</field>
        <field name="model">transfer.request.report</field>
        <field name="arch" type="xml">
            <search string="Trnasfer Request Report">
                <filter string="Deliverd" name="deliver" domain="[('state','=','deliver')]"/>
                <filter string="Reciept" name="receipt" domain="[('state','=','receipt')]"/>
                <filter string="Done" name="Done" domain="[('state','=','done')]"/>
                <filter string="Cancel" name="cancel" domain="[('state','=','cancel')]"/>
                <group expand="1" string="Group By">
                    <filter string="Representative" name="user_id" context="{'group_by':'user_id'}"/>
                    <filter string="Product" name="product_id" context="{'group_by':'product_id'}"/>
                    <filter string="Location From" name="location_from" context="{'group_by':'location_from_id'}"/> 
                    <filter string="Location to" name="location_to" context="{'group_by':'location_to_id'}"/>   
                    <filter string="Status" name="status" context="{'group_by':'state'}"/>
                    <separator/>
                    <filter string="Date" name="order_month" context="{'group_by': 'date:month'}"/>
                </group>
            </search>
        </field>
    </record>


    <!-- Actions-->
    <record id="action_feeding_report" model="ir.actions.act_window">
        <field name="name">Feeding Report</field>
        <field name="res_model">transfer.request.report</field>
        <field name="view_mode">pivot,graph</field>
        <field name="view_id"></field> 
        <field name="target">current</field>
        <field name="domain">[('type', '=', 'feeding')]</field>
    </record>

    <record id="action_internal_report" model="ir.actions.act_window">
        <field name="name">Internal Transfer Report</field>
        <field name="res_model">transfer.request.report</field>
        <field name="view_mode">pivot,graph</field>
        <field name="view_id"></field> 
        <field name="target">current</field>
        <field name="domain">[('type', '=', 'internal')]</field>
    </record>


    <!-- Menus-->
    <menuitem name= "Operations Report"
              id="menu_operations_report"
              parent="stock.menu_warehouse_report"
              sequence="200"/>
    <menuitem id="menu_feeding_report"
              action="action_feeding_report"
              parent="menu_operations_report"
              sequence="1"/>
    <menuitem id="menu_internal_report"
              action="action_internal_report"
              parent="menu_operations_report"
              sequence="2"/>

</odoo>
