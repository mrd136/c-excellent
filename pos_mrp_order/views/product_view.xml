<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="product_template_form_view_make_mrp" model="ir.ui.view">
        <field name="name">product.template.form.inherit</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="point_of_sale.product_template_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='to_weight']" position="after">
               <field name="to_make_mrp" attrs="{'invisible': [('available_in_pos', '=', False)]}"/>
            </xpath>
        </field>
    </record>

    <record id="mrp_production_form_view_inherit" model="ir.ui.view">
        <field name="name">mrp.production.form.inherit</field>
        <field name="model">mrp.production</field>
        <field name="inherit_id" ref="mrp.mrp_production_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='origin']" position="after">
                <field name="pos_config_id"/>
                <field name="pos_session_id" readonly="1"/>
            </xpath>
        </field>
    </record>

    <record id="mrp_production_tree_view_inherit" model="ir.ui.view">
        <field name="name">mrp.production.tree.inherit</field>
        <field name="model">mrp.production</field>
        <field name="inherit_id" ref="mrp.mrp_production_tree_view"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='origin']" position="after">
                <field name="pos_config_id"/>
            </xpath>
        </field>
    </record>

    <record id="view_mrp_production_filter_inherit" model="ir.ui.view">
        <field name="name">mrp.production.select.inherit</field>
        <field name="model">mrp.production</field>
        <field name="inherit_id" ref="mrp.view_mrp_production_filter"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='origin']" position="after">
                <field name="pos_config_id"/>
            </xpath>
            <xpath expr="//filter[@name='product']" position="after">
                <filter string="Point Of Sale" name="pos_config_id" domain="[]" context="{'group_by': 'pos_config_id'}"/>
            </xpath>
        </field>
    </record>
</odoo>
