	<record id="module_category_purchase" model="ir.module.category">
		<field name="name">Purchase</field>
		<field name="sequence">20</field>
	</record>

	<record id="group_purchase_department_manager" model="res.groups">
		<field name="name">Department Manager</field>
        <field name="category_id" ref="module_category_purchase"/>
        <field name="implied_ids" eval="[(4, ref('purchase.group_purchase_manager'))]"/>
    </record>

	<record id="group_purchase_general_manager" model="res.groups">
		<field name="name">Genaeral Manager</field>
        <field name="category_id" ref="module_category_purchase"/>
        <field name="implied_ids" eval="[(4, ref('purchase.group_purchase_manager'))]"/>
    </record>

